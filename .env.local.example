# CCTV Platform Environment Variables

# Application Configuration
NEXT_PUBLIC_APP_NAME="Wireless CCTV Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Streaming Configuration
RTSP_BASE_URL=rtsp://localhost:554
HLS_SEGMENT_TIME=4
HLS_PLAYLIST_TYPE=live
FFMPEG_PATH=/usr/local/bin/ffmpeg

# Camera Configuration
MAX_CAMERAS=16
DEFAULT_CAMERA_USERNAME=admin
DEFAULT_CAMERA_PASSWORD=password

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
API_KEY_SECRET=your-api-key-secret

# Database Configuration (for future use)
DATABASE_URL=postgresql://username:password@localhost:5432/cctv_db

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# External Services
NGROK_AUTH_TOKEN=your-ngrok-auth-token
WEBHOOK_URL=https://your-webhook-url.com/api/events

# Development
NODE_ENV=development
NEXT_PUBLIC_DEV_MODE=true
